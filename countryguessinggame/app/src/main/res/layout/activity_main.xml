<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="@drawable/custom_color"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/questionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Question 1/10"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

    <Button
        android:id="@+id/hintButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Get Hint"
        android:layout_marginEnd="10dp"
        app:cornerRadius="20dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/hintView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint:"
        android:textColor="#FFFFFF"
        android:layout_marginTop="128dp"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="129dp"
        android:layout_marginStart="70dp"
        android:textStyle="bold"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/guessEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/hint"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:backgroundTint="#FFFFFF"
        android:hint="What's Your Country Guess?"
        android:inputType="text|textAutoComplete|textAutoCorrect|textEnableTextConversionSuggestions"
        android:textColor="#FFFFFF"
        android:textColorHint="#85FFFFFF"
        tools:ignore="HardcodedText,UnusedAttribute,VisualLintTextFieldSize"
        android:autofillHints="" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/guessEditText"
        android:layout_centerHorizontal="true"
        app:cornerRadius="10dp"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/remainingRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@+id/submitButton"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="20sp"
        android:layout_below="@id/submitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/good_luck"
        android:layout_marginTop="450dp"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

</RelativeLayout>
